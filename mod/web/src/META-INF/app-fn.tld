<?xml version="1.0" encoding="UTF-8"?>

<taglib xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-jsptaglibrary_2_0.xsd"
        version="2.0">

	<description>App JSP functions library</description>
	<tlib-version>1.1</tlib-version>
	<short-name>appfn</short-name>
	<uri>/appfn</uri>

	<function>
		<name>question2html</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String questionToHtml(com.uphea.domain.Question)</function-signature>
	</function>

	<function>
		<name>txt2html</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String textToHtml(java.lang.String)</function-signature>
	</function>

	<function>
		<name>txtPlain</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String textPlain(java.lang.String)</function-signature>
	</function>

	<function>
		<name>fmtDate</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String fmtDate(jodd.datetime.JDateTime)</function-signature>
	</function>

	<function>
		<name>fmtTime</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String fmtTime(jodd.datetime.JDateTime,java.lang.String)</function-signature>
	</function>

	<function>
		<name>fmtIntDate</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String fmtIntDate(int)</function-signature>
	</function>

	<function>
		<name>fixedFloat</name>
		<function-class>com.uphea.jsp.Format</function-class>
		<function-signature>java.lang.String fixedFloat(int)</function-signature>
	</function>

	<function>
		<name>urlQuestion</name>
		<function-class>com.uphea.jsp.UrlFunctions</function-class>
		<function-signature>java.lang.String urlQuestionForDate(com.uphea.domain.Question)</function-signature>
	</function>

	<function>
		<name>length</name>
		<function-class>jodd.util.ObjectUtil</function-class>
		<function-signature>int length(java.lang.Object)</function-signature>
	</function>

	<function>
		<name>contains</name>
		<function-class>jodd.util.ObjectUtil</function-class>
		<function-signature>boolean containsElement(java.lang.Object,java.lang.Object)</function-signature>
	</function>

	<function>
		<name>prepareCsrfToken</name>
		<function-class>jodd.servlet.CsrfShield</function-class>
		<function-signature>java.lang.String prepareCsrfToken(javax.servlet.jsp.PageContext)</function-signature>
	</function>

	<function>
		<name>replace</name>
		<function-class>jodd.util.StringUtil</function-class>
		<function-signature>java.lang.String replace(java.lang.String,java.lang.String,java.lang.String)</function-signature>
	</function>

	<function>
		<name>test</name>
		<function-class>com.uphea.jsp.Fn</function-class>
		<function-signature>java.lang.String test(java.lang.Object,java.lang.String,java.lang.String)</function-signature>
	</function>

</taglib>
